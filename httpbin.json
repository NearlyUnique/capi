{
  "apis": [
    {
      "name": "httpbin",
      "baseUrl": "https://httpbin.org",
      "header": {
        "accept": ["application/json"],
        "user-agent": ["capi v/0.0"]
      },
      "commands": [
        {
          "name": "read",
          "path": "/anything/{value}"
        },
        {
          "name": "write",
          "method": "POST",
          "path": "/post",
          "content-type": ["application/json"],
          "body": {
            "literal_string": "string",
            "literal_number": 42,
            "literal_bool": true,
            "object" : {"isObject": true},
            "with_replacement": "{attribute}"
          }
        }
      ]
    }
  ]
}